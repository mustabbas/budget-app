
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
 <div class ="bg-primary d-flex justify-content-around align-items-center">
  <h1 class ="mx-5">REGISTER</h1>
    <div class="actions form-group">
      <%= f.submit "Sign up", class:"btn btn-primary my-3"  %>
    </div>
  </div>
   <div class ="container">
 <div class="field">
    <%= f.text_field :fullname, autofocus: true, autocomplete: "fullname",placeholder:'Full Name', class: "form-control my-2" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:'Email', class: "form-control my-2" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",placeholder:'Password', class: "form-control my-2" %>
  </div>  
<% end %>
</div>
